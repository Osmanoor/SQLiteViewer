<Window x:Class="SQLiteViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLiteViewer"
        mc:Ignorable="d"
        Title="SQLite Data Viewer" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="AA_DistinctRoster">
                <local:AA_DistinctRosterFilterControl x:Name="AA_DistinctRosterFilterControl"/>
            </TabItem>
            <TabItem Header="BetterKillfeed">
                <local:BetterKillfeedFilterControl x:Name="BetterKillfeedFilterControl"/>
            </TabItem>
        </TabControl>

        <DataGrid x:Name="ResultsDataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="True" IsReadOnly="True"/>
    </Grid>
</Window>